---
const data = [
	{ name: "Britney Mogollon", title: "Dirección General" },
	{
		name: "Mariana Litano",
		title: "Dirección del área de Finanzas y Administración",
	},
	{
		name: "Lucia Vendetta",
		title: "Dirección del área de Distribución y Logística",
	},
	{ name: "Ayleen Alburqueque", title: "Dirección del área de Producción" },
	{ name: "Miguel Forfui", title: "Subdirector del área de Producción" },
	{ name: "Celeste Huertas", title: "Dirección de Marketing y Ventas" },
];
---

<div class="team">
	{
		data.map((content) => (
			<article class="team-card">
				<h3>{content.name}</h3>
				<span>{content.title}</span>
			</article>
		))
	}
</div>

<style>
	.team {
		display: flex;
		gap: 24px;
		justify-content: center;
		flex-wrap: wrap;
	}
	.team-card {
		display: grid;
		/* background-color: #231f20; */
		background-color: #f00;
		border-radius: 20px;
		color: #fff;
		width: 320px;
		padding: 20px 0;
		gap: 1rem;
		align-items: center;
	}

	@media (min-width: 700px) {
		.team-card {
			width: 420px;
			padding: 30px 0;
			display: grid;
		}
	}
</style>
