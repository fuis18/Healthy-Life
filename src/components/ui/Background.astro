---
import { Image } from "astro:assets";

interface Props {
	src: ImageMetadata;
	id?: string;
}
const { src, id } = Astro.props;
---

<div class="background">
	<Image
		src={src}
		alt={id ? id : "Healthy Life Background"}
		format="webp"
		loading="eager"
		fetchpriority="high"
		sizes="100vw"
		style="width:100%; height:100%; object-fit:cover;"
		width={500}
		transition:name=`background ${id}`
	/>

	<style>
		.background {
			min-height: 420px;
			position: relative;
			display: flex;
			justify-content: center;
		}
		.background video,
		.background img {
			object-fit: cover;
			width: 100%;
			height: 100%;
			position: absolute;
			aspect-ratio: 2.723;
		}
	</style>
</div>
