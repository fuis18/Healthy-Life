---
import { Image } from "astro:assets";

interface Props {
	title: string;
	icon: string;
	src: string;
}
const { title, icon } = Astro.props;
---

<article class="product">
	<Image
		src={icon}
		alt={title}
		width={80}
		height={80}
		format="webp"
		loading="lazy"
	/>
	<h3>{title}</h3>
	<p><slot /></p>
	<button class="click_me">Informaci√≥n Nutricional</button>
</article>

<style>
	.product {
		background-color: #eee;
		border-radius: 16px;
		border: 1px solid #dde;
		display: grid;
		grid-template:
			"h3"
			"slot"
			"btn";
		padding: 30px;
		justify-items: center;
		column-gap: 10px;
		align-items: center;
	}

	img {
		grid-area: img;
		display: none;
		max-width: 80px;
		max-height: 80px;
		object-fit: contain;
	}

	h3 {
		grid-area: h3;
		text-align: center;
	}

	p {
		grid-area: slot;
		padding: 1rem 0;
	}

	button {
		grid-area: btn;
		display: inline-flex;
		text-align: center;
		padding: 16px 24px;
		background-color: #3d6761;
		color: #eee;
		border-radius: 50px;
		width: fit-content;
		align-items: center;
		border: none;
		font-size: 1.1rem;
	}

	@media (min-width: 600px) {
		.product {
			grid-template:
				"img h3"
				"slot slot"
				"btn btn" / min-content auto;
			padding: 30px;
		}
		img {
			display: block;
		}
	}
</style>
