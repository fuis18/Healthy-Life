---
import FooterIcons from "./ui/FooterIcons.astro";
---

<footer class="site-footer">
	<div class="footer_links">
		<a href="/#Productos">Productos</a>
		<a href="/#Blog">Blogs</a>
		<a href="/#Sobre-Nosotros">Sobre Nosotros</a>
	</div>
	<FooterIcons />
</footer>

<style is:global>
	.site-footer a {
		color: #fff;
	}
</style>
<style>
	.site-footer {
		background-color: #000;
		padding: 45px;
		display: grid;
		gap: 25px;
	}

	.footer_links {
		display: flex;
		justify-content: center;
		gap: 30px;
		flex-direction: column;
		text-align: center;
	}

	@media (min-width: 600px) {
		.footer_links {
			flex-direction: row;
			gap: 40px;
		}
	}
</style>
